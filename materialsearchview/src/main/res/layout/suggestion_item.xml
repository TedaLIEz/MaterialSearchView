<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content">

    <LinearLayout
        android:background="@color/searchView_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/searchView_item_height">
        <LinearLayout

            android:paddingBottom="@dimen/suggestion_item_margin"
            android:paddingTop="@dimen/suggestion_item_margin"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_marginStart="@dimen/searchView_image_margin"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:background="@drawable/ic_query_builder_grey_500_24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:gravity="center|start"
                android:layout_gravity="center_vertical"
                android:id="@+id/textView_suggestion"
                tools:text="searchResult"
                android:layout_marginStart="@dimen/searchview_item_margin"
                android:textColor="@color/searchView_text"
                android:textSize="@dimen/suggestion_item_keywords"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />

            <ImageView
                android:layout_marginStart="@dimen/searchView_image_margin"
                android:layout_marginEnd="@dimen/searchView_image_margin"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:background="@drawable/ic_close_grey_500_24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>